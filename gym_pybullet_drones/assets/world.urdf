<?xml version="1.0"?>
<robot name="two_boxes">
    <!-- First box -->
    <link name="box1_link">
        <visual>
            <geometry>
                <box size="0.1 1 1.0" />
            </geometry>
            <origin xyz="0 0 0.5" />
            <material name="blue">
                <color rgba="0 0 1 1" />
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.1 1 1.0" />
            </geometry>
            <origin xyz="0 0 0.5" />
        </collision>
        <inertial>
            <mass value="1.0" />
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1" />
            <origin xyz="0 0 0.5" />
        </inertial>
    </link>

    <!-- Second box -->
    <link name="box2_link">
        <visual>
            <geometry>
                <box size="0.1 1 1.0" />
            </geometry>
            <origin xyz="3.0 0 0.5" />
            <material name="red">
                <color rgba="1 0 0 1" />
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.1 1 1.0" />
            </geometry>
            <origin xyz="3.0 0 0.5" />
        </collision>
        <inertial>
            <mass value="1.0" />
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1" />
            <origin xyz="3.0 0 0.5" />
        </inertial>
    </link>

    <!-- Fixed joint connecting the two boxes -->
    <joint name="box1_to_box2" type="fixed">
        <parent link="box1_link" />
        <child link="box2_link" />
        <origin xyz="0 0 {L}" />
    </joint>
</robot>
